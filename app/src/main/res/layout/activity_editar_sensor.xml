<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">


    <LinearLayout
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <!-- LOGO -->
        <ImageView
            android:id="@+id/imageView5"
            android:layout_width="212dp"
            android:layout_height="197dp"
            android:src="@drawable/logo_arduino"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="EDITAR SENSOR"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:textStyle="bold"/>

        <!-- DUEÑO -->
        <TextView
            android:id="@+id/txtDueno"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Dueño:"
            android:textSize="18sp"
            android:layout_marginTop="20dp"/>

        <!-- CÓDIGO -->
        <TextView
            android:id="@+id/txtCodigo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Código:"
            android:textSize="18sp"
            android:layout_marginTop="10dp"/>

        <!-- TIPO -->
        <TextView
            android:id="@+id/txtTipo"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Tipo:"
            android:textSize="18sp"
            android:layout_marginTop="10dp"/>

        <!-- FECHA ALTA -->
        <TextView
            android:id="@+id/txtFechaAlta"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fecha de alta:"
            android:textSize="18sp"
            android:layout_marginTop="10dp"/>

        <!-- FECHA BAJA -->
        <TextView
            android:id="@+id/txtFechaBaja"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Fecha de baja:"
            android:textSize="18sp"
            android:layout_marginTop="10dp"/>

        <!-- SPINNER ESTADO (ÚNICO EDITABLE) -->
        <Spinner
            android:id="@+id/spinnerEstado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="25dp"/>

        <!-- BOTÓN GUARDAR -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnGuardar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guardar cambios"
            android:layout_marginTop="20dp"
            app:backgroundTint="#8A2BE2"
            app:strokeColor="#8A2BE2"
            android:textColor="#FFFFFF"
            style="@style/Widget.MaterialComponents.Button"/>
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnEliminar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Eliminar Sensor"
            android:layout_marginTop="12dp"
            app:backgroundTint="#FF3B30"
            app:strokeColor="#FF3B30"
            android:textColor="#FFFFFF"
            style="@style/Widget.MaterialComponents.Button"/>

    </LinearLayout>

</ScrollView>
