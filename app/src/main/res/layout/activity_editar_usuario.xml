<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <LinearLayout
        android:orientation="vertical"
        android:padding="20dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal">

        <!-- LOGO -->
        <ImageView
            android:id="@+id/imageViewUsuario"
            android:layout_width="212dp"
            android:layout_height="197dp"
            android:src="@drawable/logo_arduino"
            android:layout_marginTop="10dp" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="EDITAR USUARIO"
            android:textSize="20sp"
            android:layout_marginTop="20dp"
            android:textAlignment="center"
            android:textStyle="bold"/>

        <!-- NOMBRES (solo lectura) -->
        <TextView
            android:id="@+id/txtNombres"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Nombres:"
            android:textSize="18sp"
            android:layout_marginTop="20dp"/>

        <!-- APELLIDOS (solo lectura) -->
        <TextView
            android:id="@+id/txtApellidos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Apellidos:"
            android:textSize="18sp"
            android:layout_marginTop="10dp"/>

        <!-- RUT (solo lectura) -->
        <TextView
            android:id="@+id/txtRut"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="RUT:"
            android:textSize="18sp"
            android:layout_marginTop="10dp"/>

        <!-- LABEL Email -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Email:"
            android:textSize="18sp"
            android:layout_marginTop="15dp"/>

        <!-- EMAIL editable SOLO valor -->
        <EditText
            android:id="@+id/editEmail"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#FFFFFF"
            android:hint="Ingrese email"
            android:inputType="textEmailAddress"
            android:maxLength="50"
            android:padding="8dp"
            android:text=""
            android:textColor="#FFFFFF" />

        <!-- LABEL Teléfono -->
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Teléfono:"
            android:textSize="18sp"
            android:layout_marginTop="15dp"/>

        <!-- TELÉFONO editable SOLO valor -->
        <EditText
            android:id="@+id/editTelefono"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="#FFFFFF"
            android:hint="Ingrese teléfono"
            android:inputType="phone"
            android:maxLength="9"
            android:padding="8dp"
            android:text=""
            android:textColor="#FFFFFF" />

        <!-- SPINNER ESTADO editable -->
        <Spinner
            android:id="@+id/spinnerEstadoUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="15dp"/>

        <!-- BOTÓN GUARDAR -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnGuardarUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Guardar cambios"
            android:layout_marginTop="20dp"
            app:backgroundTint="#8A2BE2"
            app:strokeColor="#8A2BE2"
            android:textColor="#FFFFFF"
            style="@style/Widget.MaterialComponents.Button"
            />

        <!-- BOTÓN ELIMINAR -->
        <com.google.android.material.button.MaterialButton
            android:id="@+id/btnEliminarUsuario"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Eliminar Usuario"
            android:layout_marginTop="12dp"
            app:backgroundTint="#FF3B30"
            app:strokeColor="#FF3B30"
            android:textColor="#FFFFFF"
            style="@style/Widget.MaterialComponents.Button"
            />

    </LinearLayout>

</ScrollView>
