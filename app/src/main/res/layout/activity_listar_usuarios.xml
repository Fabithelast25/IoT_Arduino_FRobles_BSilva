<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/main"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ListarUsuarios">

    <ImageView
        android:id="@+id/imageView5"
        android:layout_width="212dp"
        android:layout_height="197dp"
        android:layout_marginTop="32dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/logo_arduino" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:text="LISTA DE USUARIOS"
        android:textAllCaps="true"
        android:textColor="#FFFFFF"
        android:textSize="18sp"
        android:textStyle="bold"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="0.497"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@+id/imageView5" />

    <TableLayout
        android:id="@+id/tablaEncabezados"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:stretchColumns="*"
        app:layout_constraintTop_toBottomOf="@+id/textView6"
        android:padding="4dp">

        <TableRow>

            <TextView
                android:text="Nombres"
                android:padding="6dp"
                android:textStyle="bold"
                android:textColor="#880E4F"/>

            <TextView
                android:text="Apellidos"
                android:padding="6dp"
                android:textStyle="bold"
                android:textColor="#880E4F"/>

            <TextView
                android:text="Email"
                android:padding="6dp"
                android:textStyle="bold"
                android:textColor="#880E4F"/>

            <TextView
                android:text="Estado"
                android:padding="6dp"
                android:textStyle="bold"
                android:textColor="#880E4F"/>

            <TextView
                android:text="TelÃ©fono"
                android:padding="6dp"
                android:textStyle="bold"
                android:textColor="#880E4F"/>

            <TextView
                android:text="RUT"
                android:padding="6dp"
                android:textStyle="bold"
                android:textColor="#880E4F"/>
        </TableRow>

    </TableLayout>


    <ListView
        android:id="@+id/listaUsuarios"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="8dp"
        app:layout_constraintTop_toBottomOf="@+id/tablaEncabezados"
        app:layout_constraintBottom_toBottomOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>
